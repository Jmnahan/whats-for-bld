<nav class="z-40 fixed top-0 w-screen">
  <% if !user_signed_in? %>
  <div class="flex flex-row items-center bg-yellow-400 px-4 py-4">
    <%= image_tag("icon.png", :size => "60x60") %>
    <h1 class="text-4xl ml-4">What's for Breakfast-Lunch-Dinner?</h1>
  </div>
  <% end %>
  <ul class="flex">
  <% if current_user %>
    <% if current_user.admin? %>
      <%= link_to "All Recipes", pages_feed_path %>
      <%= link_to "All User", users_path %>
    <% else %>
      <%= link_to "Home", root_path %>
      <%= link_to "Create new recipe", new_recipe_path %>
      <%= link_to "My recipes", recipes_path %>
      <%= link_to "Liked recipes", liked_recipes_path %>
      <%= link_to "User Settings", edit_user_registration_path(current_user), 'data-turbo-method': :patch %>
      <%= image_tag(current_user.image, style:"height: 50px;") if current_user.image.attached? %>
    <% end %>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
  <p><%= render "search/form" %></p>
  <% end %>
  </ul>
</nav>