<h1>What's for BLD?</h1>
<% if current_user %>
  <p> You have sucessfully authenticated your account</p>
  <p>Hello <%= current_user.email %>!</p>
  <p>You are a [<%= current_user.role %>]</p>
  <% if current_user.admin? %>
    <%= link_to "All Recipes", root_path %>
    <%= link_to "All User", root_path %>
  <% else %>
    <%= link_to "Create new recipe", new_recipe_path %>
    <%= link_to "My recipes", recipes_path %>
  <% end %>
  <br>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>
  <p>You are not signed in</p>
  <%= link_to "Sign up!", new_user_registration_path %>
  <%= link_to "Login", new_user_session_path %>
<% end %>